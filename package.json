{
  "name": "sea-server-app",
  "version": "4.5.0",
  "description": "NAS Cloud - Single Executable Application with React frontend and Fastify backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:bundle": "npm run build && node scripts/build-bundle.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:full": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "tsx src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build:sea": "npm run build:bundle && npm run sea:prep && npm run sea:inject",
    "sea:prep": "node --experimental-sea-config sea-config.json",
    "sea:inject": "npm run sea:copy && npm run sea:remove-signature && npm run sea:postject && npm run sea:sign",
    "sea:copy": "node -e \"require('fs').copyFileSync(process.execPath, process.platform === 'win32' ? 'sea-server.exe' : 'sea-server')\"",
    "sea:remove-signature": "node scripts/remove-signature.js",
    "sea:postject": "node scripts/postject.js",
    "sea:sign": "node scripts/sign.js",
    "front:dev": "cd frontend && npm run dev",
    "front:build": "cd frontend && npm run build"
  },
  "keywords": [
    "sea",
    "single-executable",
    "typescript",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.11",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/static": "^8.3.0",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "postject": "^1.0.0-alpha.6"
  }
}